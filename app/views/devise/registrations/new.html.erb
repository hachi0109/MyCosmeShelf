<div class="auth-wrapper">
  <div class="auth-card">
    <h2 class="auth-title">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "お名前" %><br />
        <%= f.text_field :name, autofocus: true, placeholder: "例：田中 咲希", class: "auth-input" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
      </div>

      <div class="field">
        <%= f.label :theme_color_id, "マイテーマカラー※後から変更可" %><br />
        <%= f.collection_select :theme_color_id, ThemeColor.all, :id, :name, {prompt: "色を選択してね"}, {class: "auth-input"} %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "auth-input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード（再入力）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class: "btn-auth-submit" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
